<div class="container">
  <div class=" row">
    <h1 class="dash-title"> <strong><%= "#{current_user.username}'s couch" %></strong>
    </h1>
  </div>
  <div class="content-dashboard d-flex">
  <div class="menu-left" style="border-right: 1px solid black;padding:10px;width: 30%;">
<span id="nav-tab" >
  <p class="active"><a href="#like">My Likes</a></p>
  <p><a href="#description">My Wishlist</a></p>
  <p><a href="#comments">My comments</a></p>
</span>
  </div>
 <div class="menu-right tab-content" style="padding:10px;width: 70%;">
    <div class="like tab-pane active" id="like">
      <% if !current_user.likes.empty? %>
        <ul>
          <% current_user.likes.each do |like| %>
            <li>
              <div class="card-product-dashboard">
                <% if like.game.photo.present? %>
                  <%= cl_image_tag like.game.photo, class: "img" %>
                <% else %>
                  <%= image_tag "loading.png", class: "img" %>
                <% end %>
            <div class="mini-card-title-infos">
            <div class="mini-card-title">
              <p><%= link_to like.game.name, game_path(like.game) %></p>
            </div>
          </div>
                <% end %>
              </div>
            </li>
        </ul>
      <% else %>
        <h3>Tell us which games you like!</h3>
      <% end %>
    </div>

<div class="wishlist tab-pane" id="wishlist">
  <ul>
    <% current_user.wishes.each do |wish| %>
      <li>
      <div class="card-product-dashboard">
        <% if wish.game.photo.present? %>
          <%= cl_image_tag wish.game.photo, class: "img" %>
        <% else %>
          <%= image_tag "loading.png", class: "img" %>
        <% end %>
        <div class="card-product-infos">
          <%= link_to wish.game.name, game_path(wish.game), class: "black-color" %>
    <% end %>
    </div>
</div>
      </li>
    </ul>
</div>
  <div class="comments tab-pane" id="comments">
    <ul>
      <%current_user.comments.each do |comment| %>
        <li class="comment-line">
          <% d = comment.created_at %> <%=  %>
          <%= "#{d.strftime("%b %-d %Y, %H:%M")}" %>
          <br>
          <%= "(" %>
          <%=link_to comment.game.name, game_path(comment.game), class: "black-color"%>
          <%= ")" %>
          <br>
          <%="#{comment.content}"%>
        </li>
      <% end %>

    </ul>
</div>
</div>
</div>
</div>
