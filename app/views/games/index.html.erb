<div class="container">

  <div class="<%= current_user.likes.count < 5 ? 'search-bar-careful-one' : 'search-bar' %>">
    <%= form_tag games_path, method: :get do %>
      <%= hidden_field_tag :sort, params[:sort] %>
      <%= text_field_tag :search_query,
      params[:search_query],
      class: "form-control",
      placeholder: "Search on GameCouch "
      %>
  <% end %>
  </div>


  <% if current_user.likes.count < 5 %>
    <div class= "like-notif">
    <%="<------ Like #{5 - current_user.likes.count} more games to get perfect recommandation"%>
    </div>
  <% end %>


  <div class="row">
    <div class="col-2">
      <div class="row">
      <div class="lateral-button">
          <div class="col-12 p-2">
            <%= link_to "Last Games", games_path %>
          </div>
          <div class="col-12 p-2">
            <%= link_to "Sort by like", games_path(sort: "like", search_query: params[:search_query]) %>
        </div>
          <div class="col-12 p-2">
            <%= link_to "Sort by comment", games_path(sort: "comment", search_query: params[:search_query])%>
          </div>
        </div>
      </div>
    </div>
    <div class="col-10">
      <% @games.each do |game| %>
        <%=render "card_index", game: game %>
      <% end %>
    </div>
  </div>
</div>
