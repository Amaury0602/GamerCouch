<div class="card-product-index">
    <%= cl_image_tag game.photo, class: "img" %>
    <div class="card-product-infos">
      <div class="title-date">
        <h1><%= game.name %></h1>
        <h3><%= game.year %></h3>
      </div>
      <div class="platform">
        <h3><%= game.platform %></h2>
      </div>
      <div class="reaction">
        <h4><i class="far fa-comments">2</i></h4>
        <h4><i class="far fa-heart"><%= Like.where(game_id: game.id).count %></i></h4>
        <h4>Game alike</h4>
        <h4>Right Choice ?</h4>
      </div>
    </div>
    <%= link_to "", game_path(game) %>
</div>
