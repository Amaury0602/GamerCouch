<div class = "comment-content">
  <p> <strong> <% d = Date.today  %> <%= d.strftime("%d/%b/%Y") %>
   ---
   <%= comment.user.username %>
   <% if comment.user.avatar.blank? %>
          <%= image_tag "https://www.weekend-esprithautsdefrance.com/sites/picardiev3/themes/picardiev3/img_v2/user-default.jpg", class: "avatar-bordered" %>
          <% else %>
          <%= cl_image_tag comment.user.avatar, class: "avatar-bordered"%>
          <% end %>
        </strong>
      </p>
  <p><%= comment.content %></p>
</div>

